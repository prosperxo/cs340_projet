<div id="browse">
    <h2>Sales List</h2>
    <button onclick="newSale()">Add New Sale</button>
    <table border="1" cellpadding="5">
        <tr>
            <th>Customer ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Actions</th>
        </tr>
        {{#each sales}}
        <tr>
            <td>{{customerId}}</td>
            <td>{{orderDate}}</td>
            <td>{{totalAmount}}</td>
            <td><button onclick="updateSale({{id}})">Edit</button><button onclick="deleteSale({{id}})">Delete</button></td>
        </tr>
        {{/each}}
    </table>
</div>

<!-- Insert Section -->
<div id="insert" style="display: none;">
    <h2>Add to Sales</h2>
    <form method="POST" action="/addSale">
        <label>Customer ID:</label> <input type="number" name="customerID" required><br>
        <label>Order Date:</label> <input type="date" name="orderDate" required><br>
        <label>Total Amount:</label> <input type="number" step="0.01" min="0" name="totalAmount" required><br>
        <button type="submit">Add to Sales</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Update Section -->
<div id="update" style="display: none;">
    <h2>Update Sale</h2>
    <form method="POST" action="/updateSale">
        <label>Customer ID:</label> <input type="number" name="customerID" required><br>
        <label>Order Date:</label> <input type="date" name="orderDate" required><br>
        <label>Total Amount:</label> <input type="number" step="0.01" min="0" name="totalAmount" required><br>
        <button type="submit">Save Changes</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Delete Section -->
<div id="delete" style="display: none;">
    <h2>Delete Sale</h2>
    <form method="POST" action="/deleteSale">
        <p>Are you sure you want to delete this sale?</p>
        <button type="submit">Delete</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>
