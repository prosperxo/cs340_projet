<div id="browse">
    <h2>Games List</h2>
    <input type="text" placeholder="Search By Title/Genre/Platform ..." id="gameFilter" onkeyup="filterFunction()" style="width: 300px">
    <button onclick="newGame()">Add New Game</button>
    <table border="1" cellpadding="5" id="gameTable">
        <tr>
            <th>Title</th>
            <th>Release Date</th>
            <th>Genre</th>
            <th>Platform</th>
            <th>Avg Rating</th>
            <th>Copies Sold</th>
            <th>Actions</th>
        </tr>
        {{#each games}}
        <tr>
            <td>{{title}}</td>
            <td>{{releaseDate}}</td>
            <td>{{genre}}</td>
            <td>{{platform}}</td>
            <td>{{avgRating}}</td>
            <td>{{copiesSold}}</td>
            <td>
                <button onclick="updateGame({{id}})">Edit</button>
                <button onclick="deleteGame({{id}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>

<!-- Insert Section -->
<div id="insert" style="display: none;">
    <h2>Add New Game</h2>
    <form method="POST" action="/addGame">
        <label>Title:</label> <input type="text" name="title" required><br>
        <label>Release Date:</label> <input type="date" name="releaseDate" required><br>
        <label>Genre:</label> <input type="text" name="genre" required><br>
        <label>Platform:</label> <input type="text" name="platform" required><br>
        <label>Avg Rating:</label> <input type="number" step="0.1" min="0" max="10" name="avgRating" required><br>
        <label>Copies Sold:</label> <input type="number" name="copiesSold" required><br>
        <button type="submit">Add Game</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Update Section -->
<div id="update" style="display: none;">
    <h2>Update Game</h2>
    <form method="POST" action="/updateGame">
        <input type="hidden" name="gameID" id="updateGameID">
        <label>Title:</label> <input type="text" name="title" required><br>
        <label>Release Date:</label> <input type="date" name="releaseDate" required><br>
        <label>Genre:</label> <input type="text" name="genre" required><br>
        <label>Platform:</label> <input type="text" name="platform" required><br>
        <label>Avg Rating:</label> <input type="number" step="0.1" min="0" max="10" name="avgRating" required><br>
        <label>Copies Sold:</label> <input type="number" name="copiesSold" required><br>
        <button type="submit">Save Changes</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Delete Section -->
<div id="delete" style="display: none;">
    <h2>Delete Game</h2>
    <form method="POST" action="/deleteGame">
        <input type="hidden" name="gameID" id="deleteGameID">
        <p>Are you sure you want to delete this game?</p>
        <button type="submit">Delete</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>
