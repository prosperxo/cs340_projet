<!-- Browse Section -->
<div id="browse">
    <h2>Customer List</h2>
    <input type="text" placeholder="Search By Name/Email ..." id="customerFilter" onkeyup="filterFunction()" style="width: 300px">
    <button onclick="showForm('insert')">Add New Customer</button>
    <table border="1" cellpadding="5" id="customerTable">
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Signup Date</th>
            <th>Actions</th>
        </tr>
        {{#each customers}}
        <tr data-id="{{customerID}}">
            <td class="email">{{email}}</td>
            <td class="first-name">{{firstName}}</td>
            <td class="last-name">{{lastName}}</td>
            <td>{{signupDate}}</td>
            <td>
                <button onclick="updateCustomer({{customerID}})">Edit</button>
                <button onclick="deleteCustomer({{customerID}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>

<!-- Insert Section -->
<div id="insert" style="display: none;">
    <h2>Add New Customer</h2>
    <form method="POST" action="/addCustomer">
        <label>Email:</label> <input type="email" name="email" required><br>
        <label>Password:</label> <input type="password" name="password" required><br>
        <label>First Name:</label> <input type="text" name="firstName" required><br>
        <label>Last Name:</label> <input type="text" name="lastName" required><br>
        <button type="submit">Add Customer</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Update Section -->
<div id="update" style="display: none;">
    <h2>Update Customer</h2>
    <form method="POST" action="/updateCustomer">
        <input type="hidden" name="customerID" id="updateCustomerID">
        <label>Email:</label> <input type="email" name="email" id="updateEmail" required><br>
        <label>First Name:</label> <input type="text" name="firstName" id="updateFirstName" required><br>
        <label>Last Name:</label> <input type="text" name="lastName" id="updateLastName" required><br>
        <label>Password:</label> <input type="password" name="password" id="updatePassword" required><br>
        <button type="submit">Save Changes</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Delete Section -->
<div id="delete" style="display: none;">
    <h2>Delete Customer</h2>
    <form method="POST" action="/deleteCustomer">
        <input type="hidden" name="customerID" id="deleteCustomerID">
        <p>Are you sure you want to delete this customer?</p>
        <button type="submit">Delete</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>
