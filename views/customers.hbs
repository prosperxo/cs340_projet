<!-- Browse Section -->
<div id="browse">
    <h2>Customer List</h2>
    <input type="text" placeholder="Search By Name/Email ..." id="customerFilter" onkeyup="filterFunction()" style="width: 300px">
    <button onclick="newCustomer()">Add New Customer</button>
    <table border="1" cellpadding="5" id="customerTable">
        <tr>
            <th>Customer ID</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Signup Date</th>
            <th>Actions</th>
        </tr>
        {{#each customers}}
        <tr data-id="{{customerID}}">
            <td>{{customerID}}</td>
            <td class="email">{{email}}</td>
            <td class="first-name">{{firstName}}</td>
            <td class="last-name">{{lastName}}</td>
            <td>{{signupDate}}</td>
            <td>
                <button onclick="updateCustomer({{customerID}})">Edit</button>
                <button onclick="deleteCustomer({{customerID}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>

<!-- Insert Section -->
<div id="insert" style="display: none;">
    <h2>Add New Customer</h2>
    <form method="POST" action="/addCustomer">
        <label>Email:</label> <input type="email" name="email" required><br>
        <label>Password:</label> <input type="password" name="password" required><br>
        <label>First Name:</label> <input type="text" name="firstName" required><br>
        <label>Last Name:</label> <input type="text" name="lastName" required><br>
        <button type="submit">Add Customer</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Update Section -->
<div id="update" style="display: none; width: 100%; margin-top: 20px;">
    <h2 style="color: #32e0c4; margin-bottom: 20px;">Update Customer</h2>
    <form method="POST" action="/updateCustomer" class="form">
        <input type="hidden" name="customerID" id="updateCustomerID">

        <!-- Form Fields -->
        <div style="display: flex; flex-direction: column; gap: 15px;">
            <label style="color: #32e0c4;">Email:</label>
            <input type="email" name="email" id="updateEmail" required class="input">

            <label style="color: #32e0c4;">Password:</label>
            <input type="password" name="password" id="updatePassword" required class="input">

            <label style="color: #32e0c4;">First Name:</label>
            <input type="text" name="firstName" id="updateFirstName" required class="input">

            <label style="color: #32e0c4;">Last Name:</label>
            <input type="text" name="lastName" id="updateLastName" required class="input">

            
        </div>

        <!-- Buttons -->
        <div style="display: flex; justify-content: flex-start; gap: 10px; margin-top: 20px;">
            <button type="submit" class="button">Save Changes</button>
            <button type="button" onclick="showForm('browse')" class="button cancel-button">Cancel</button>
        </div>
    </form>
</div>


<!-- Delete Section -->
<div id="delete" style="display: none;">
    <h2>Delete Customer</h2>
    <form method="POST" action="/deleteCustomer">
        <input type="hidden" name="customerID" id="deleteCustomerID">
        <p>Are you sure you want to delete this customer?</p>
        <button type="submit">Delete</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>
