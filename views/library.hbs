 <!-- Browse Section -->
<div id="browse">
    <h2>Library List</h2>
    <button onclick="newLibraryItem()">Add New Library Item</button>
    <table border="1" cellpadding="5">
        <tr>
            <th>Customer ID</th>
            <th>Game ID</th>
            <th>Actions</th>
        </tr>
        {{#each library}}
        <tr data-id="({{customerID}},{{gameID}})">
            <td class="customerID">{{customerID}}</td>
            <td class="gameID">{{gameID}}</td>
            <td>
                <button onclick="updateLibraryItem({{customerID}}, {{gameID}})">Edit</button>
                <button onclick="deleteLibraryItem({{customerID}}, {{gameID}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>

<!-- Insert Section -->
<div id="insert" style="display: none;">
    <h2>Add to Library</h2>
    <form method="POST" action="/addLibraryItem">
        <label>Customer ID:</label> <input type="number" name="customerID" required><br>
        <label>Game ID:</label> <input type="number" name="gameID" required><br>
        <button type="submit">Add to Library</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Update Section -->
<div id="update" style="display: none;">
    <h2>Update Library</h2>
    <form method="POST" action="/updateLibraryItem">
        <input type="hidden" name="libraryID" id="updateLibraryID">
        <label>Customer ID:</label> <input type="number" name="customerID" id="updateCustomerID" required><br>
        <label>Game ID:</label> <input type="number" name="gameID" id="updateGameID" required><br>
        <button type="submit">Save Changes</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Delete Section -->
<div id="delete" style="display: none;">
    <h2>Delete from Library</h2>
    <form method="POST" action="/deleteLibraryItem">
        <input type="hidden" name="libraryID" id="deleteLibraryID">
        <p>Are you sure you want to delete this from the library?</p>
        <button type="submit">Delete</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>
