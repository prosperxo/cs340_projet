<!-- Browse Section -->
<div id="browse">
    <h2>Order Items List</h2>
    <button onclick="newOrderItem()">Add New Order Item</button>
    <table border="1" cellpadding="5" id="orderItemTable">
        <tr>
            <th>Order Item ID</th>
            <th>Sale ID</th>
            <th>Game ID</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
        {{#each orderItems}}
        <tr data-id="{{orderItemID}}">
            <td>{{orderItemID}}</td>
            <td>{{saleID}}</td>
            <td>{{gameID}}</td>
            <td class="quantity">{{quantity}}</td>
            <td class="price">{{price}}</td>
            <td>
                <button onclick="updateOrderItem({{orderItemID}})">Edit</button>
                <button onclick="deleteOrderItem({{orderItemID}})">Delete</button>
            </td>
        </tr>
        {{/each}}
    </table>
</div>

<!-- Insert Section -->
<div id="insert" style="display: none;">
    <h2>Add to Order Items</h2>
    <form method="POST" action="/addOrderItem">
        <label>Sale ID:</label> <input type="number" name="saleID" required><br>
        <label>Game ID:</label> <input type="number" name="gameID" required><br>
        <label>Quantity:</label> <input type="number" step="1" min="1" name="quantity" required><br>
        <label>Price:</label> <input type="number" step="0.01" min="0" name="price" required><br>
        <button type="submit">Add to Order Items</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Update Section -->
<div id="update" style="display: none;">
    <h2>Update Order Item</h2>
    <form method="POST" action="/updateOrderItem">
        <input type="hidden" name="orderItemID" id="updateOrderItemID">
        <label>Quantity:</label> <input type="number" step="1" min="1" name="quantity" id="updateQuantity" required><br>
        <label>Price:</label> <input type="number" step="0.01" min="0" name="price" id="updatePrice" required><br>
        <button type="submit">Save Changes</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>

<!-- Delete Section -->
<div id="delete" style="display: none;">
    <h2>Delete Order Item</h2>
    <form method="POST" action="/deleteOrderItem">
        <input type="hidden" name="orderItemID" id="deleteOrderItemID">
        <p>Are you sure you want to delete this order item?</p>
        <button type="submit">Delete</button>
        <button type="button" onclick="showForm('browse')">Cancel</button>
    </form>
</div>
